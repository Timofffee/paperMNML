php_flag display_startup_errors on
php_flag display_errors on
php_flag html_errors on
php_value docref_root 1
php_value docref_ext 1
<IfModule mod_php5.c>
   php_value short_open_tag 1
 </IfModule> 
php_value upload_max_filesize 10M
php_value post_max_size 10M

RewriteBase /

Options -Indexes

ErrorDocument 403 /error_pages/404.html
ErrorDocument 404 /error_pages/404.html


RewriteEngine On
RewriteRule ^post/(.*)/comments$ /post.php?post_id=$1#comments [NC,L]
RewriteRule ^post/(.*)/comment_(.*)$ /post.php?post_id=$1#comment_$2 [NC,L]
RewriteRule ^post/(.*)$ /post.php?post_id=$1 [NC,L]
RewriteRule ^@(.*)$ /user.php?login=$1 [NC,L]
RewriteRule ^tag/(.*)$ /tag.php?tag=$1 [NC,L]
RewriteRule ^search/(.*)$ /search.php?text=$1 [NC,L]
RewriteRule ^where-is-my-pass/$ /forgot-pass.php [NC,L]

